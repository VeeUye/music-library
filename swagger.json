{
  "swagger": "2.0",
  "info": {
    "version": "2.0.0",
    "title": "Music Library",
    "description": "An API for interacting with a simple music library database. Created by Vee Uye as part of the [Manchester Codes Software Engineering Bootcamp](https://www.manchestercodes.com/courses/bootcamp#curriculum). For more on this and my other projects, check out my [github](https://github.com/VeeUye).",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "schemes": ["http", "https"],

  "paths": {
    "/artist": {
      "post": {
        "tags": ["Artist"],
        "summary": "Add a new artist to the library",
        "parameters": [
          {
            "name": "Add",
            "in": "body",
            "required": true,
            "description": "Artist object to be added to library",
            "schema": {
              "type": "object",
              "required": ["name", "genre"],
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Jurrasic 5"
                },
                "genre": {
                  "type": "string",
                  "example": "Hip Hop"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Artist added",
            "schema": {
              "$ref": "#/definitions/ArtistObject"
            }
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation"
          }
        },
        "produces": ["application/json"]
      },
      "get": {
        "summary": "reads all artists from the database",
        "tags": ["Artist"],
        "responses": {
          "200": {
            "description": "returns array of artists",
            "schema": {
              "$ref": "#/definitions/ArtistObjects"
            }
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation"
          }
        }
      }
    },
    "/artist/{id}": {
      "get": {
        "summary": "Reads artist by id",
        "tags": ["Artist"],
        "parameters": [
          {
            "in": "path",
            "type": "integer",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/ArtistObject"
            }
          },
          "404": {
            "description": "Artist id not found."
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation."
          }
        }
      },
      "patch": {
        "summary": "update an artist in the database",
        "tags": ["Artist"],
        "parameters": [
          {
            "in": "path",
            "description": "artist id",
            "type": "integer",
            "name": "id",
            "required": true
          },
          {
            "name": "body",
            "required": true,
            "in": "body",
            "description": "Updated artist object to be added to library",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Mos Def"
                },
                "genre": {
                  "type": "string",
                  "example": "Hip Hop"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated Artist",
            "schema": {
              "type": "object",
              "required": ["affectedRows"],
              "properties": {
                "affectedRows": {
                  "type": "integer",
                  "example": 1
                }
              }
            }
          },
          "404": {
            "description": "Artist id not found."
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation."
          }
        }
      },
      "delete": {
        "summary": "delete an artist in the database",
        "tags": ["Artist"],
        "parameters": [
          {
            "in": "path",
            "type": "number",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Artist deleted",
            "schema": {
              "type": "object",
              "required": ["affectedRows"],
              "properties": {
                "affectedRows": {
                  "type": "integer",
                  "example": 1
                }
              }
            }
          },
          "404": {
            "description": "Artist id not found."
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation."
          }
        }
      }
    },
    "/album": {
      "post": {
        "tags": ["Album"],
        "summary": "creates a new album in the database",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "create an album in the library",
            "schema": {
              "type": "object",
              "required": ["name", "year", "artistId"],
              "properties": {
                "name": {
                  "type": "string",
                  "example": "The Craft"
                },
                "year": {
                  "type": "number",
                  "example": 2005
                },
                "artistId": {
                  "type": "integer",
                  "example": 3
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Album created",
            "schema": {
              "$ref": "#/definitions/AlbumObject"
            }
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation."
          }
        },
        "produces": ["application/json"]
      },

      "get": {
        "summary": "Returns all albums in the library",
        "tags": ["Album"],

        "responses": {
          "200": {
            "description": "returns array of albums",
            "schema": {
              "$ref": "#/definitions/AlbumObjects"
            }
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation."
          }
        }
      }
    },
    "/album/{id}": {
      "get": {
        "summary": "Read an album by id",
        "tags": ["Album"],
        "parameters": [
          {
            "in": "path",
            "type": "number",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/AlbumObject"
            }
          },
          "404": {
            "description": "Album id not found."
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation."
          }
        }
      },
      "patch": {
        "summary": "update an album in the library",
        "tags": ["Album"],
        "parameters": [
          {
            "in": "path",
            "type": "number",
            "name": "id",
            "required": true
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "description": "album object to be added to the library",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "The Craft"
                },
                "year": {
                  "type": "integer",
                  "example": 2006
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "number of albums updated",
            "schema": {
              "type": "object",
              "required": ["affectedRows"],
              "properties": {
                "affectedRows": {
                  "type": "integer",
                  "example": 1
                }
              }
            }
          },
          "404": {
            "description": "Album id not found."
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation."
          }
        }
      },
      "delete": {
        "summary": "delete an album by id",
        "tags": ["Album"],
        "parameters": [
          {
            "in": "path",
            "type": "number",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Album deleted",
            "schema": {
              "type": "object",
              "required": ["affectedRows"],
              "properties": {
                "affectedRows": {
                  "type": "integer",
                  "example": 1
                }
              }
            }
          },
          "404": {
            "description": "Album id not found."
          },
          "500": {
            "description": "Music Library API is currently unable to handle this operation."
          }
        }
      }
    }
  },
  "definitions": {
    "ArtistObjects": {
      "properties": {
        "artist": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ArtistObject"
          }
        }
      }
    },

    "ArtistObject": {
      "required": ["id", "name", "genre"],
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "name": {
          "type": "string",
          "example": "Jurrasic 5"
        },
        "genre": {
          "type": "string",
          "example": "Hip Hop"
        }
      }
    },

    "AlbumObjects": {
      "properties": {
        "artist": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AlbumObject"
          }
        }
      }
    },
    "AlbumObject": {
      "required": ["id", "name", "year"],
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "name": {
          "type": "string",
          "example": "The Craft"
        },
        "year": {
          "type": "integer",
          "example": 2005
        },
        "artistId": {
          "type": "integer",
          "example": 3
        }
      }
    }
  }
}
